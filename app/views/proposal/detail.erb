<div class="container">
  <div class="well">

  <div class = "media">
      <div class="media-body">
        <h3 class="media-heading">
          <%=@proposal_detail.title%>
          <small><%=@proposal_detail.date.strftime('%c')%></small>
        </h3>
        <%=@proposal_detail.description%>
        <h4><%=@proposal_detail.author%></h4>
      </div>
    </div>

  <hr>

  <h4>Deja un comentario:</h4>
  <% form_for(@comment, '/proposal/comment', html: { class: 'form' }) do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :nombre, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :author, class: 'form-control', 
            placeholder: 'Ej: Don Pepito', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :comentario, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :body, class: 'form-control',
            placeholder: 'Ej: Este es un hermoso comentario, positivo y constructivo',
            rows: '3', required: true %>
        </div>
      </div>

      <%= f.hidden_field :proposal_id, value: @proposal_detail.id%>

      <div class="form-actions">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
      </div>
  <% end %>
  </div>

  <hr>
  <% for @comment in @comments %>
    <div class = "media">
      <div class="media-body">
        <h4 class="media-heading">
          <%=@comment.author%>
          <small><%=@comment.date.strftime('%c')%></small>
        </h4>
        <%=@comment.body%>
      </div>
    </div>
  <% end %>

</div>
