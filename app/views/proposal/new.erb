<div class="container">
  <h1>Nueva Propuesta</h1>

  <% form_for(@proposal, '/proposal/create', html: { class: 'form' }) do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :título, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title, class: 'form-control', 
            placeholder: 'Ej: Super Tema 2016', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :descripción, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, class: 'form-control',
            placeholder: 'Ej: Esta es una linda descripción de propuesta',
            rows: '3', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :autor, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :author, class: 'form-control', 
            placeholder: 'Ej: Don Pepito', required: true %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
        <%= link_to "Cancelar", url(:proposal, :new), :class => "btn btn-default" %>
      </div>
  <% end %>
</div>
