<div class="container">
  <h1>Nueva Propuesta</h1>

  <form class="form">
    <fieldset>
      <div class="form-group">
        <label class="control-label">Título</label>
        <div class="controls">
          <input type="text" required
                 placeholder="Ej: Super Tema 2016" class="form-control" />
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Descripción</label>
        <div class="controls">
          <textarea placeholder="Ej: Esta es una linda descripción de propuesta"
            class="form-control" rows="3" required></textarea>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Author</label>
        <div class="controls">
           <input type="text" required
                    placeholder="Ej: Don Pepito" class="form-control" />
        </div>
      </div>

      <div class="form-actions">
         <button type="submit" class="btn btn-primary">Enviar</button>
         <button type="submit" 
                 class="btn btn-default" formnovalidate>Cancelar</button>
      </div>
    </fieldset>
  </form>
</div>
